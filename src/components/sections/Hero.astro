---

import type { HeroContent } from "../../i18n/ui";

interface Props {
    t: HeroContent;
}

const { t } = Astro.props;
---

<section
    class="relative h-screen w-full bg-void flex flex-col justify-center items-center overflow-hidden"
>
    <!-- Grid de fondo sutil -->
    <div
        class="absolute inset-0 bg-[linear-gradient(to_right,#1c1c1c_1px,transparent_1px),linear-gradient(to_bottom,#1c1c1c_1px,transparent_1px)] bg-size-[4rem_4rem] mask-[radial-gradient(ellipse_60%_50%_at_50%_0%,#000_70%,transparent_100%)]"
    >
    </div>
    <!-- Floating Data Card (Top Left) -->
    <div
        class="absolute top-24 left-4 md:left-12 z-20 border border-white/10 bg-void/50 backdrop-blur-md p-4 rounded-sm"
    >
        <div class="flex flex-col gap-1 font-mono text-xs">
            <div class="flex items-center gap-2 text-gray-400">
                <span class="w-2 h-2 bg-acid rounded-full animate-pulse"></span>
                {t.location}
            </div>
            <div class="text-acid" id="hero-time">00:00:00</div>
            <div class="text-gray-500 mt-1 border-t border-white/10 pt-1">
                // {t.openToWork}
            </div>
        </div>
    </div>

    <div class="z-10 text-center space-y-8 px-4">
        <p class="font-mono text-acid text-sm tracking-[0.3em] uppercase">
            {t.status}
        </p>

        <h1
            class="font-serif text-6xl md:text-9xl text-paper mix-blend-difference tracking-tight"
        >
            {t.title}
        </h1>

        <p
            class="font-mono text-gray-400 text-sm md:text-base tracking-widest uppercase border-y border-white/10 py-2 inline-block"
        >
            --- {t.role} ---
        </p>

        <div class="flex items-center justify-center gap-4 mt-12">
            <div class="h-px w-12 bg-gray-500"></div>
            <p class="font-mono text-gray-400 text-xs max-w-xs text-justify">
                {t.description}
            </p>
            <div class="h-px w-12 bg-gray-500"></div>
        </div>
    </div>

    <script>
        function updateTime() {
            const timeElement = document.getElementById("hero-time");
            if (timeElement) {
                const now = new Date();
                timeElement.textContent =
                    now.toLocaleTimeString("es-MX", {
                        timeZone: "America/Mexico_City",
                        hour12: false,
                        hour: "2-digit",
                        minute: "2-digit",
                        second: "2-digit",
                    }) + " [CDMX]";
            }
        }
        setInterval(updateTime, 1000);
        updateTime();
    </script>
</section>
