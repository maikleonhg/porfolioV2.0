---
import { Image } from "astro:assets";
import heroCoat from "../../assets/images/hero_pic.jpeg";
import heroSiluet from "../../assets/images/hero_pic_siluet.png";
import type { SystemProfileContent } from "../../i18n/ui";

interface Props {
    t: {
        hardwired: string;
        logic: string;
    };
    profile: SystemProfileContent;
}

const { t, profile } = Astro.props;
---

<div id="scroll-container" class="relative w-full bg-void h-[350vh]">
    <!-- BLOQUE STICKY: FOTO + TEXTO -->
    <div
        class="h-screen w-full flex items-center justify-center overflow-hidden"
        style="position: sticky; top: 0;"
    >
        <!-- CAPA 0: BACKGROUND (COAT) -->
        <div
            id="hero-background"
            class="absolute inset-0 z-0 w-full h-full will-change-transform"
        >
            <Image
                src={heroCoat}
                alt="Background"
                class="absolute inset-0 w-full h-full object-cover grayscale contrast-125 brightness-50"
            />

            <!-- Overlay que se oscurece -->
            <div
                id="image-overlay"
                class="absolute inset-0 bg-void/0 transition-colors duration-300"
            >
            </div>
        </div>

        <!-- CAPA 1: TEXTO (MARQUEE + STATIC) -->
        <div
            id="hero-text"
            class="relative z-10 w-full h-full pointer-events-none"
        >
            <!-- STATIC: ROLES (Responsive) -->
            <div
                class="absolute top-[15%] w-full z-20 mix-blend-difference px-6 md:px-0"
            >
                <!-- DESKTOP: Centered & Horizontal -->
                <div class="hidden md:flex justify-center">
                    <p
                        class="font-mono text-[#EFE5D5] text-base md:text-xl tracking-[0.3em] uppercase border-y border-[#EFE5D5]/30 py-4 px-8 backdrop-blur-[2px]"
                    >
                        DATA ENGINEER &nbsp;·&nbsp; AI DEVELOPER &nbsp;·&nbsp;
                        SYSTEM ARCHITECT
                    </p>
                </div>

                <!-- MOBILE: Centered & Stacked -->
                <div
                    class="md:hidden flex flex-col items-center space-y-3 border-y border-[#EFE5D5]/30 py-6 backdrop-blur-[2px]"
                >
                    <span
                        class="font-mono text-[#EFE5D5] text-sm tracking-[0.2em] uppercase font-bold"
                        >DATA ENGINEER</span
                    >
                    <span
                        class="font-mono text-[#EFE5D5] text-sm tracking-[0.2em] uppercase font-bold"
                        >AI DEVELOPER</span
                    >
                    <span
                        class="font-mono text-[#EFE5D5] text-sm tracking-[0.2em] uppercase font-bold"
                        >SYSTEM ARCHITECT</span
                    >
                </div>
            </div>

            <!-- MARQUEE: BOTTOM -->
            <div
                class="absolute bottom-0 w-full mix-blend-difference overflow-hidden pb-12"
            >
                <div class="marquee-container w-full">
                    <div
                        class="marquee-content font-display text-[35vw] md:text-[15vw] font-bold tracking-widest text-[#EFE5D5] whitespace-nowrap leading-none"
                    >
                        Miguel Alejandro Leon &nbsp; Miguel Alejandro Leon
                        &nbsp;
                    </div>
                </div>
            </div>
        </div>

        <style>
            .marquee-container {
                overflow: hidden;
                white-space: nowrap;
            }
            .marquee-content {
                display: inline-block;
                animation: marquee 20s linear infinite;
            }
            @keyframes marquee {
                0% {
                    transform: translateX(0);
                }
                100% {
                    transform: translateX(-50%);
                }
            }
        </style>

        <!-- CAPA 2: SILHOUETTE (En frente del texto) -->
        <div
            id="hero-silhouette"
            class="absolute inset-0 z-[15] w-full h-full pointer-events-none will-change-transform"
        >
            <Image
                src={heroSiluet}
                alt="Silhouette"
                class="absolute inset-0 w-full h-full object-cover grayscale contrast-125 brightness-90 drop-shadow-2xl"
            />
        </div>
    </div>

    <!-- SYSTEM PROFILE PANEL -->
    <section class="relative z-20 mt-[90vh] pb-20">
        <div class="max-w-4xl mx-auto px-6">
            <div
                class="bg-paper/10 backdrop-blur-xl border border-white/20 p-10 md:p-12 shadow-2xl rounded-sm"
            >
                <!-- Header -->
                <div class="flex items-center gap-4 mb-8">
                    <div class="h-2 w-2 bg-acid rounded-full animate-pulse">
                    </div>
                    <span
                        class="font-mono text-acid text-xs tracking-widest uppercase"
                    >
                        {profile.header}
                    </span>
                </div>

                <!-- Subtitle -->
                <h3
                    class="font-serif text-3xl md:text-4xl text-paper mb-8 tracking-tight"
                >
                    {profile.subtitle}
                </h3>

                <!-- Narrative -->
                <div
                    class="space-y-6 font-mono text-sm md:text-base text-gray-300 leading-relaxed"
                >
                    {
                        profile.narrative
                            .split("\n\n")
                            .map((paragraph: string) => (
                                <p class="text-justify">{paragraph}</p>
                            ))
                    }
                </div>
            </div>
        </div>
    </section>
</div>

<script>
    const container = document.getElementById("scroll-container");
    const background = document.getElementById("hero-background");
    const silhouette = document.getElementById("hero-silhouette");
    const overlay = document.getElementById("image-overlay");
    const text = document.getElementById("hero-text");

    if (container && background && silhouette && text && overlay) {
        window.addEventListener("scroll", () => {
            const rect = container.getBoundingClientRect();
            const viewportHeight = window.innerHeight;
            const totalDist = rect.height - viewportHeight;

            let progress = 0;
            if (rect.top <= 0) {
                progress = Math.abs(rect.top) / totalDist;
            }
            progress = Math.min(Math.max(progress, 0), 1);

            // 1) TEXTO: 0 → 0.5 (desaparece y sube un poco)
            if (progress <= 0.5) {
                const textProgress = progress / 0.5; // 0 → 1
                text.style.opacity = `${1 - textProgress}`;
                text.style.transform = `translateY(-${textProgress * 100}px)`;
            } else {
                text.style.opacity = "0";
            }

            // 2) IMAGENES (Fondo + Silueta): 0.5 → 1 (blur + oscurecer)
            if (progress > 0.5) {
                const imgProgress = (progress - 0.5) / 0.5; // 0 → 1

                const blurAmount = imgProgress * 20;
                background.style.filter = `blur(${blurAmount}px)`;
                silhouette.style.filter = `blur(${blurAmount}px)`;

                const opacity = imgProgress * 0.6;
                overlay.style.backgroundColor = `rgba(10, 10, 10, ${opacity})`;
            } else {
                background.style.filter = "blur(0px)";
                silhouette.style.filter = "blur(0px)";
                overlay.style.backgroundColor = `rgba(10, 10, 10, 0)`;
            }
        });
    }
</script>
