---
import type { ProjectsContent } from '../../i18n/ui';
import { sectors as allSectors } from '../../data/projects/portfolioData';

interface Props {
  t: ProjectsContent;
  lang: "es" | "en";
}

const { t, lang } = Astro.props;

// Filter for Landing Page: Only Core (A) and Client (B)
const sectors = allSectors.filter(s => s.id === "SECTOR_A" || s.id === "SECTOR_B");
---

<section class="relative w-full bg-paper py-24 px-4 md:px-12 overflow-hidden" id="deployed-systems">
  <!-- Background Grid -->
  <div class="absolute inset-0 bg-[url('/grid-pattern.svg')] opacity-5 pointer-events-none invert"></div>

  <!-- Header -->
  <div class="max-w-7xl mx-auto mb-20 relative z-10">
    <div class="flex items-center gap-4 mb-4">
      <div class="h-px w-12 bg-acid"></div>
      <span class="font-mono text-void/60 text-xs tracking-widest uppercase">{t.header}</span>
    </div>
    <h2 class="font-serif text-4xl md:text-6xl text-void uppercase tracking-tighter">
      {t.title} <span class="text-void/30 italic font-light">{t.subtitle}</span>
    </h2>
  </div>

  <!-- Content -->
  <div class="max-w-7xl mx-auto relative z-10 space-y-24">
    
    {sectors.map((sector) => (
      <div class="space-y-8">
        <!-- Sector Header -->
        <div class="border-b border-void/10 pb-4 flex flex-col md:flex-row md:items-end justify-between gap-2">
          <div>
            <h3 class="font-mono text-void text-lg md:text-xl uppercase tracking-wider">[{sector.id}] {sector.title}</h3>
            <p class="font-sans text-void/50 text-sm">{sector.subtitle}</p>
          </div>
          <div class="font-mono text-void/40 text-xs">
            // {sector.projects.length} MODULES LOADED
          </div>
        </div>

        <!-- Grid -->
        <div class="grid grid-cols-1 md:grid-cols-6 gap-4 auto-rows-[minmax(300px,auto)]">
          {sector.projects.map((project) => (
            <div 
              class={`group relative border border-void/10 bg-void text-paper hover:border-acid/50 transition-all duration-300 overflow-hidden cursor-pointer ${project.colSpan} ${project.rowSpan}`}
              data-project={JSON.stringify(project)}
              data-lang={lang}
              onclick="window.openProjectModal(this)"
            >
              {project.layout === 'split' ? (
                // SPLIT LAYOUT (Specific for SYS-001 / Highlights)
                <div class="flex flex-col md:flex-row h-full">
                    <!-- Text Content (3/5) -->
                    <div class="w-full md:w-3/5 p-6 md:p-10 flex flex-col justify-center relative z-20 space-y-4">
                        <div class="flex justify-between items-start">
                             <span class="font-mono text-acid text-xs bg-acid/10 px-2 py-1 rounded-sm">
                                {project.status}
                             </span>
                             <span class="font-mono text-white/30 text-[10px]">
                                {project.id}
                             </span>
                        </div>
                        
                        <h4 class="font-display text-3xl md:text-4xl text-white group-hover:text-acid transition-colors">
                            {project.title}
                        </h4>
                        
                        <p class="font-sans text-white/70 text-sm md:text-base leading-relaxed">
                            {project.concept[lang]}
                        </p>

                        <div class="flex flex-wrap gap-2 pt-2">
                             {project.stack.map(tech => (
                                <span class="text-[10px] font-mono text-white/50 border border-white/10 px-1.5 py-0.5">
                                    {tech}
                                </span>
                             ))}
                        </div>
                        
                        <div class="flex items-center gap-2 text-acid text-xs font-mono pt-4 opacity-80 group-hover:opacity-100 transition-opacity">
                            <span>[+] ACCESS BLUEPRINT</span>
                            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
                        </div>
                    </div>

                    <!-- Image Content (2/5) -->
                    <div class="w-full md:w-2/5 relative min-h-[250px] md:min-h-full bg-void border-t md:border-t-0 md:border-l border-white/5 p-4 md:p-6 flex items-center justify-center">
                         <!-- Image with "margin" effect (padding handled by container) -->
                         <div class="relative w-full h-full rounded-sm overflow-hidden border border-white/10 group-hover:border-acid/30 transition-colors">
                            <img 
                                src={project.visual} 
                                alt={project.title}
                                class="absolute inset-0 w-full h-full object-cover object-top opacity-80 group-hover:opacity-100 group-hover:scale-105 transition-all duration-700"
                            />
                         </div>
                    </div>
                </div>
              ) : (
                // STANDARD LAYOUT (Overlay)
                <>
                  <!-- Background / Visual -->
                  <div class={`absolute inset-0 ${project.visual} transition-transform duration-700 group-hover:scale-105 opacity-20 group-hover:opacity-30`}>
                    {project.specialEffect === 'terminal-overlay' && (
                      <div class="absolute inset-0 bg-black/50 p-4 font-mono text-[10px] text-green-500/80 overflow-hidden opacity-50">
                        <div class="animate-pulse">
                          &gt; SYSTEM_CHECK... OK<br/>
                          &gt; CPU_TEMP: 34°C<br/>
                          &gt; MEM_USAGE: 45%<br/>
                          &gt; UPTIME: 4120h<br/>
                          &gt; PACKETS_IN: 4021<br/>
                          &gt; BLOCKING_ADS...<br/>
                          &gt; _
                        </div>
                      </div>
                    )}
                    {project.specialEffect === 'wireframe' && (
                      <div class="absolute inset-0 bg-[linear-gradient(45deg,transparent_25%,rgba(255,255,255,0.05)_25%,rgba(255,255,255,0.05)_50%,transparent_50%,transparent_75%,rgba(255,255,255,0.05)_75%,rgba(255,255,255,0.05)_100%)] bg-size-[20px_20px]"></div>
                    )}
                  </div>

                  <!-- Content -->
                  <div class="absolute inset-0 p-6 flex flex-col justify-end z-20">
                    <div class="transform translate-y-4 group-hover:translate-y-0 transition-transform duration-300">
                      <div class="flex justify-between items-start mb-2">
                        <span class="font-mono text-acid text-xs bg-acid/10 px-2 py-1 rounded-sm">
                          {project.status}
                        </span>
                        <span class="font-mono text-white/30 text-[10px]">
                          {project.id}
                        </span>
                      </div>
                      
                      <h4 class="font-display text-2xl text-white mb-2 group-hover:text-acid transition-colors">
                        {project.title}
                      </h4>
                      
                      <p class="font-sans text-white/70 text-sm mb-4 line-clamp-2 group-hover:line-clamp-none transition-all">
                        {project.concept[lang]}
                      </p>

                      <div class="flex flex-wrap gap-2 mb-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300 delay-100">
                        {project.stack.map(tech => (
                          <span class="text-[10px] font-mono text-white/50 border border-white/10 px-1.5 py-0.5">
                            {tech}
                          </span>
                        ))}
                      </div>

                      <div class="flex items-center gap-2 text-acid text-xs font-mono opacity-0 group-hover:opacity-100 transition-opacity duration-300 delay-200">
                        <span>{project.type === 'BLUEPRINT' ? '[+] ACCESS SCHEMATICS' : '[O] VIEW GALLERY'}</span>
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
                      </div>
                    </div>
                  </div>
                </>
              )}
            </div>
          ))}
        </div>
      </div>
    ))}

    <!-- More Work Button -->
    <div class="flex justify-center pt-12">
      <a href="/work" class="group relative w-16 h-16 flex items-center justify-center border border-white/10 rounded-full hover:border-acid transition-colors bg-void hover:bg-white/5">
        <span class="text-white/50 group-hover:text-acid text-2xl font-light transition-colors">+</span>
      </a>
    </div>

  </div>
</section>

<!-- Modal / Drawer System -->
<div id="project-modal" class="fixed inset-0 z-50 hidden opacity-0 transition-opacity duration-300" aria-hidden="true">
  <!-- Backdrop -->
  <div class="absolute inset-0 bg-black/90 backdrop-blur-md" onclick="window.closeProjectModal()"></div>
  
  <!-- Content Container (Wide Drawer) -->
  <div class="absolute inset-y-0 right-0 w-full md:w-[80%] bg-zinc-950 border-l border-white/10 transform translate-x-full transition-transform duration-300 flex flex-col shadow-2xl" id="modal-panel">
    
    <!-- Modal Header -->
    <div class="p-8 border-b border-white/10 flex justify-between items-start bg-zinc-900/50 shrink-0">
      <div>
        <span id="modal-id" class="font-mono text-acid text-xs mb-2 block"></span>
        <h3 id="modal-title" class="font-display text-3xl md:text-5xl text-white uppercase"></h3>
        <p id="modal-subtitle" class="font-mono text-white/50 text-xs mt-1"></p>
      </div>
      <button onclick="window.closeProjectModal()" class="text-white/50 hover:text-acid transition-colors p-2">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
      </button>
    </div>

    <!-- Modal Body -->
    <div class="flex-1 overflow-y-auto p-8 md:p-12 space-y-12 custom-scrollbar" id="modal-body">
      
      <!-- Concept Section (Default) -->
      <div id="modal-default-content">
        <h4 class="font-mono text-white/40 text-xs uppercase mb-4">// CONCEPT_DEFINITION</h4>
        <p id="modal-concept" class="font-sans text-white/80 text-lg leading-relaxed max-w-3xl"></p>
        
        <!-- Tech Stack -->
        <div class="mt-8">
            <h4 class="font-mono text-white/40 text-xs uppercase mb-4">// TECH_STACK</h4>
            <div id="modal-stack" class="flex flex-wrap gap-2"></div>
        </div>

        <!-- Blueprint / Specs Section (Dynamic) -->
        <div id="modal-blueprint" class="hidden space-y-6 p-6 bg-acid/5 border border-acid/10 rounded-sm mt-8 max-w-3xl">
            <div class="flex items-center gap-2 mb-2">
            <div class="w-2 h-2 bg-acid animate-pulse"></div>
            <h4 class="font-mono text-acid text-sm uppercase">SYSTEM_BLUEPRINT</h4>
            </div>
            
            <div class="space-y-4">
            <div>
                <span class="font-mono text-white/40 text-[10px] uppercase block mb-1">ARCHITECTURE</span>
                <p id="modal-arch-desc" class="font-mono text-white/70 text-sm"></p>
            </div>
            
            <div class="h-px w-full bg-acid/20"></div>
            
            <div>
                <span class="font-mono text-white/40 text-[10px] uppercase block mb-1">TECHNICAL_SPECS</span>
                <p id="modal-specs" class="font-mono text-acid/80 text-xs"></p>
            </div>
            </div>
        </div>

        <!-- Gallery Section (Dynamic) -->
        <div id="modal-gallery" class="hidden mt-8 space-y-4">
            <h4 class="font-mono text-white/40 text-xs uppercase mb-4">// VISUAL_EVIDENCE</h4>
            <div id="modal-gallery-grid" class="grid grid-cols-1 gap-4"></div>
        </div>
      </div>

      <!-- Extended Details (Dynamic Injection) -->
      <div id="modal-extended-details" class="hidden space-y-16 max-w-5xl">
        <!-- Content will be injected here via JS -->
      </div>

    </div>

    <!-- Modal Footer -->
    <div class="p-6 border-t border-white/10 bg-zinc-900/50 shrink-0">
      <div class="flex items-center justify-between font-mono text-[10px] text-white/30">
        <span>SECURE_CONNECTION</span>
        <span>ENCRYPTED_SHA256</span>
      </div>
    </div>
  </div>
</div>

<script is:inline>
  window.openProjectModal = (element) => {
    const data = JSON.parse(element.dataset.project);
    const modal = document.getElementById('project-modal');
    const panel = document.getElementById('modal-panel');
    
    // Populate Basic Data
    const currentLang = element.dataset.lang || 'es';
    
    document.getElementById('modal-id').textContent = `// ${data.id} :: ${data.status}`;
    document.getElementById('modal-title').textContent = data.title;
    document.getElementById('modal-concept').textContent = typeof data.concept === 'object' ? data.concept[currentLang] : data.concept;
    
    // Stack
    const stackContainer = document.getElementById('modal-stack');
    stackContainer.innerHTML = '';
    data.stack.forEach(tech => {
      const span = document.createElement('span');
      span.className = 'px-3 py-1 border border-white/20 text-white/70 font-mono text-xs uppercase';
      span.textContent = tech;
      stackContainer.appendChild(span);
    });

    // Blueprint Logic
    const blueprintSection = document.getElementById('modal-blueprint');
    if (data.type === 'BLUEPRINT' && data.blueprint) {
      blueprintSection.classList.remove('hidden');
      const archDesc = typeof data.blueprint.description === 'object' ? data.blueprint.description[currentLang] : data.blueprint.description;
      document.getElementById('modal-arch-desc').textContent = archDesc;
      document.getElementById('modal-specs').textContent = data.blueprint.specs;
    } else {
      blueprintSection.classList.add('hidden');
    }

    // Gallery Logic
    const gallerySection = document.getElementById('modal-gallery');
    const galleryGrid = document.getElementById('modal-gallery-grid');
    
    if (data.gallery && data.gallery.length > 0) {
        gallerySection.classList.remove('hidden');
        galleryGrid.innerHTML = '';
        data.gallery.forEach(img => {
            const div = document.createElement('div');
            div.className = 'border border-white/10 rounded overflow-hidden';
            div.innerHTML = `<img src="${img}" class="w-full h-auto object-cover" loading="lazy" />`;
            galleryGrid.appendChild(div);
        });
    } else {
        gallerySection.classList.add('hidden');
    }

    // Extended Details Logic (SYS-001)
    const extendedContainer = document.getElementById('modal-extended-details');
    const defaultContent = document.getElementById('modal-default-content');
    
    if (data.details) {
        defaultContent.classList.add('hidden');
        extendedContainer.classList.remove('hidden');
        extendedContainer.innerHTML = renderExtendedDetails(data.details, currentLang);
    } else {
        defaultContent.classList.remove('hidden');
        extendedContainer.classList.add('hidden');
        extendedContainer.innerHTML = '';
    }

    // Show Modal
    modal.classList.remove('hidden');
    setTimeout(() => {
      modal.classList.remove('opacity-0');
      panel.classList.remove('translate-x-full');
    }, 10);
    
    document.body.style.overflow = 'hidden';
  };

  window.closeProjectModal = () => {
    const modal = document.getElementById('project-modal');
    const panel = document.getElementById('modal-panel');
    
    modal.classList.add('opacity-0');
    panel.classList.add('translate-x-full');
    
    setTimeout(() => {
      modal.classList.add('hidden');
      document.body.style.overflow = '';
    }, 300);
  };

  // Helper to render the complex object
  function renderExtendedDetails(details, lang) {
    const getTxt = (val) => {
        if (!val) return '';
        if (typeof val === 'object' && val.es) {
            return val[lang] || val.es;
        }
        return val;
    };

    let html = '';

    // Metadata Header
    html += `
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 border-b border-white/10 pb-8">
            <div>
                <span class="font-mono text-acid text-xs block mb-2">PROJECT_ID: ${details.id}</span>
                <h1 class="font-display text-4xl text-white mb-4">${getTxt(details.title)}</h1>
                <div class="flex flex-wrap gap-2">
                    ${details.metadata.stack.map(s => `<span class="px-2 py-1 bg-white/5 text-white/60 text-xs font-mono border border-white/10">${s}</span>`).join('')}
                </div>
            </div>
            <div class="font-mono text-xs text-white/40 space-y-2">
                <p>STATUS: <span class="text-acid">${getTxt(details.metadata.status)}</span></p>
                <p>LOCATION: ${getTxt(details.metadata.location)}</p>
            </div>
        </div>
    `;

    // Sections
    details.sections.forEach(section => {
        html += `<div class="space-y-6">`;
        
        if (section.title) {
            html += `<h3 class="font-mono text-acid text-lg border-l-2 border-acid pl-4">${getTxt(section.title)}</h3>`;
        }

        if (section.description) {
            html += `<p class="font-sans text-white/80 text-lg leading-relaxed">${getTxt(section.description)}</p>`;
        }

        if (section.content) {
            section.content.forEach(item => {
                html += `
                    <div class="mb-4">
                        <h4 class="font-bold text-white mb-2">${getTxt(item.subtitle)}</h4>
                        <p class="text-white/70 leading-relaxed">${getTxt(item.text)}</p>
                    </div>
                `;
            });
        }

        // Diagrams (Flow)
        if (section.diagram && section.diagram.type === 'flow') {
            html += `
                <div class="bg-black/30 p-6 border border-white/10 rounded-lg my-6 overflow-x-auto">
                    <div class="flex items-center justify-between min-w-[600px] gap-4 text-center font-mono text-xs">
                        ${section.diagram.items.map((item, idx) => `
                            <div class="flex-1">
                                <div class="text-acid mb-2 uppercase">${getTxt(item.label)}</div>
                                <div class="bg-zinc-900 p-3 border border-white/20 rounded">${getTxt(item.content)}</div>
                            </div>
                            ${idx < section.diagram.items.length - 1 ? '<div class="text-white/20">→</div>' : ''}
                        `).join('')}
                    </div>
                </div>
            `;
        }

        // Subsections
        if (section.subsections) {
            section.subsections.forEach(sub => {
                html += `
                    <div class="ml-4 md:ml-8 mt-8 border-l border-white/5 pl-6">
                        <h4 class="font-display text-xl text-white mb-4">${getTxt(sub.title)}</h4>
                        ${sub.text ? `<p class="text-white/70 mb-4">${getTxt(sub.text)}</p>` : ''}
                        
                        ${sub.details ? `
                            <ul class="list-disc list-inside text-white/60 space-y-2 mb-4">
                                ${sub.details.map(d => `<li>${getTxt(d)}</li>`).join('')}
                            </ul>
                        ` : ''}

                        ${sub.image ? (
                            sub.image.startsWith('PLACEHOLDER:') ? `
                                <div class="my-6 border border-acid/20 bg-acid/5 p-4 rounded flex items-center justify-center text-center">
                                    <div class="space-y-2">
                                        <div class="text-acid text-xs font-mono uppercase tracking-widest">[IMAGE_PLACEHOLDER]</div>
                                        <p class="text-white/50 text-sm italic">${sub.image.replace('PLACEHOLDER:', '').trim()}</p>
                                    </div>
                                </div>
                            ` : `
                                <div class="my-6 border border-white/10 rounded overflow-hidden">
                                    <img src="${sub.image}" alt="${getTxt(sub.title)}" class="w-full h-auto object-cover opacity-80 hover:opacity-100 transition-opacity" />
                                </div>
                            `
                        ) : ''}

                        ${sub.items ? `
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
                                ${sub.items.map(item => `
                                    <div class="bg-white/5 p-4 rounded">
                                        <span class="text-acid text-xs font-mono block mb-1">${getTxt(item.label)}</span>
                                        <p class="text-white/80 text-sm">${getTxt(item.text)}</p>
                                    </div>
                                `).join('')}
                            </div>
                        ` : ''}
                    </div>
                `;
            });
        }

        // Visualization Items
        if (section.items && !section.diagram) {
             html += `
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
                    ${section.items.map(item => `
                        <div class="border border-white/10 p-4">
                            <h5 class="text-acid font-mono text-sm mb-2">${getTxt(item.label)}</h5>
                            <p class="text-white/70 text-sm">${getTxt(item.text)}</p>
                        </div>
                    `).join('')}
                </div>
            `;
        }

        // Image in Section (Main)
        if (section.image) {
            html += section.image.startsWith('PLACEHOLDER:') ? `
                <div class="mt-6 border border-acid/20 bg-acid/5 p-4 rounded flex items-center justify-center text-center">
                    <div class="space-y-2">
                        <div class="text-acid text-xs font-mono uppercase tracking-widest">[IMAGE_PLACEHOLDER]</div>
                        <p class="text-white/50 text-sm italic">${section.image.replace('PLACEHOLDER:', '').trim()}</p>
                    </div>
                </div>
            ` : `
                <div class="mt-6 border border-white/10 rounded overflow-hidden">
                    <img src="${section.image}" alt="${getTxt(section.title) || 'Project Image'}" class="w-full h-auto object-cover opacity-80 hover:opacity-100 transition-opacity" />
                </div>
            `;
        }

        html += `</div>`;
    });

    // Appendix
    if (details.appendix) {
        html += `
            <div class="bg-zinc-900 p-8 mt-12 border-t border-white/10">
                <h3 class="font-mono text-white/50 text-sm mb-6">${getTxt(details.appendix.title)}</h3>
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                    ${details.appendix.items.map(item => `
                        <div>
                            <span class="block text-acid/50 text-[10px] uppercase">${getTxt(item.label)}</span>
                            <span class="block text-white text-xs font-mono">${getTxt(item.value)}</span>
                        </div>
                    `).join('')}
                </div>
            </div>
        `;
    }

    return html;
  }

  // Close on Escape
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') window.closeProjectModal();
  });
</script>

<style>
  /* Custom Scrollbar for Modal */
  .custom-scrollbar::-webkit-scrollbar {
    width: 4px;
  }
  .custom-scrollbar::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
  }
  .custom-scrollbar::-webkit-scrollbar-thumb {
    background: rgba(204, 255, 0, 0.2);
  }
  .custom-scrollbar::-webkit-scrollbar-thumb:hover {
    background: rgba(204, 255, 0, 0.5);
  }
</style>
